- content_for(:title) do
	= t(:reset_title,:scope => :password)

.row
	= form_for(resource,:as => resource_name,:url => password_path(resource_name),:class => 'form-horizontal') do |f|
		- if devise_has_password_reset_validation_errors?(resource)
			.form-group.has-error
				= render('devise/shared/email_form',:f => f,:submit_title => t(:reset_password,:scope => :action))
		- else
			.form-group
				= render('devise/shared/email_form',:f => f,:submit_title => t(:reset_password,:scope => :action))

- if devise_has_password_reset_validation_errors?(resource) == false
	.devise-launch-button
		= render('devise/shared/launch_app_button')
